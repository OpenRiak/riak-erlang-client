{minimum_otp_vsn, "22.3"}.

{cover_enabled, true}.

{eunit_opts, [verbose]}.

{erl_opts, [
    debug_info,
    warnings_as_errors
]}.

{deps, [
    {riak_pb,
        {git, "https://github.com/nhs-riak/riak_pb.git",
            {branch, "wday-develop-3.2"}}}
]}.

{edoc_opts, [
    {preprocess, true},
    {report_missing_types, true}
]}.

{dialyzer, [{plt_apps, all_deps}]}.

{profiles, [
    {gha, [{erl_opts, [{d, 'GITHUBEXCLUDE'}]}]}
]}.

{clean_files, ["doc/*.html", "doc/*.png", "doc/edoc-info", "doc/*.css"]}.

{xref_checks, [
    undefined_function_calls,
    undefined_functions,
    deprecated_function_calls,
    deprecated_functions,
    locals_not_used
]}.
